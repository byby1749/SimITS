<resources>

    <!-- Base application theme. -->
    <style name="AppTheme_" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="InfoTextViewStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/style_infotextview</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="InfoTextViewStyle_doublewidth">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">440dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/style_infotextview</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="InfoTextViewStyle_null">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="InfoTextViewStyle_green">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/style_infotextview_green</item>
    </style>
    <style name="InfoTextViewStyle_red">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/style_infotextview_red</item>
    </style>

    <style name="toggleButton">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:shadowColor">#777777</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:background">@drawable/toggle_selector</item>
    </style>
    <style name="groupbox_head">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:shadowColor">#777777</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/gorupbox_head</item>
    </style>
</resources>
